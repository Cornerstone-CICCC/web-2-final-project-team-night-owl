---
import { Image } from 'astro:assets';
import docImg from '../assets/img/doctors/doc.png';
import doc1 from '../assets/img/doctors/doc1.png';
import doc2 from '../assets/img/doctors/doc2.png';
import doc3 from '../assets/img/doctors/doc3.png';
import doc4 from '../assets/img/doctors/doc4.png';
import doc5 from '../assets/img/doctors/doc5.png';
import doc6 from '../assets/img/doctors/doc6.png';
---

<section class="doctors">
  <div class="container">
    <div class="doctor-header">
      <h2>Doctors</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>

    <div class="grid">
      <div class="doctor-card">
        <Image src={doc1} alt="Doctor 1" />
        <h4>Dr. Mazen E. Ganim</h4>
        <p>MBBS, MS, Mch Urology</p>
        <strong>Family Medicine</strong>
      </div>
      <div class="doctor-card">
        <Image src={doc2} alt="Doctor 2" />
        <h4>Dr. Mazen E. Ganim</h4>
        <p>MBBS, MD, DM Rheumatology</p>
        <strong>Pathology</strong>
      </div>
      <div class="doctor-card">
        <Image src={doc3} alt="Doctor 3" />
        <h4>Dr. Howard D. Axe</h4>
        <p>MBBS, MD Anesthesia</p>
        <strong>Obstetrics</strong>
      </div>
      <div class="doctor-card extra-doctor">
        <Image src={doc4} alt="Doctor 4" />
        <h4>Dr. Mahsa Rezaei, MD</h4>
        <p>MBBS, MD, DM Cardiology</p>
        <strong>Emergency Medicine</strong>
      </div>
      <div class="doctor-card extra-doctor">
        <Image src={doc5} alt="Doctor 5" />
        <h4>Dr. Dilip Anmangandla, MD</h4>
        <p>MBBS, MS Gyne & Obs</p>
        <strong>Urology</strong>
      </div>
      <div class="doctor-card extra-doctor">
        <Image src={doc6} alt="Doctor 6" />
        <h4>Dr. Marion Carson, MD</h4>
        <p>MBBS, MS, Mch Neurosurgery</p>
        <strong>Neurology</strong>
      </div>
    </div>

    <button class="view-more-btn">View more</button>
  </div>
</section>

<style>
  

  .doctors .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .doctor-card {
    text-align: center;
    padding: 1rem 0;
  }

  .doctor-card img {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  .doctor-card h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: #222;
  }

  .doctor-card p {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 0.3rem;
  }

  .doctor-card strong {
    display: block;
    font-size: 0.9rem;
    color: #111;
    font-weight: 500;
    margin-top: 0.25rem;
  }

  .extra-doctor {
    display: block;
  }

  .extra-doctor.hidden {
    display: none !important;
  }

  .view-more-btn {
  display: block;
  margin: 2rem auto;
  padding: 10px 24px;
  font-size: 16px;
  border: 1px solid #000;
  background: white;
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.view-more-btn:hover {
  background: #f5f5f5;
}


  .doctor-header {
  text-align: center;
  padding-top: 3rem;
  max-width: 700px;
  margin: 0 auto;
}

.doctor-header h2 {
  font-size: 2.8rem;
  font-weight: 700;
  color: #111;
  margin-bottom: 0.5rem;
}

.doctor-header p {
  font-size: 1.2rem;
  color: #555;
  font-weight: 400;
  line-height: 1.6;
}



  @media (max-width: 1024px) {
   

    .doctors .grid {
      grid-template-columns: 1fr;
    }

    .view-more-btn {
      display: block;
    }
  }

  @media (min-width: 1025px) {
    .doctors .grid {
      grid-template-columns: repeat(3, 1fr);
    }

  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const extraDoctors = document.querySelectorAll('.extra-doctor');
    const viewMoreBtn = document.querySelector('.view-more-btn');
    let expanded = false;

    function isMobile() {
      return window.innerWidth <= 1024;
    }

    function toggleDoctors(show) {
      extraDoctors.forEach(card => {
        card.classList.toggle('hidden', !show);
      });
      viewMoreBtn.textContent = show ? 'Show less' : 'View more';
    }

    function initDoctorsDisplay() {
      if (isMobile()) {
        toggleDoctors(false); 
        expanded = false;
      } else {
        extraDoctors.forEach(card => card.classList.remove('hidden')); 
        viewMoreBtn.textContent = 'View more'; 
        expanded = false;
      }
    }

    initDoctorsDisplay();

    viewMoreBtn.addEventListener('click', () => {
      if (!isMobile()) return;
      expanded = !expanded;
      toggleDoctors(expanded);
    });

    window.addEventListener('resize', () => {
      initDoctorsDisplay();
    });
  });
</script>

