<style>
  .why-choose, .doctors {
    padding: 4rem 2rem;
    background: #f9f9f9;
  }

  .text-center {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 3rem auto;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2rem;
    align-items: center;
  }

  .feature {
    text-align: center;
    font-size: 0.95rem;
  }

  .image-center {
    grid-column: 3 / 4;
    display: flex;
    justify-content: center;
  }

  .image-center img {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    object-fit: cover;
  }

  .buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .button {
    background: black;
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
  }

  .button.secondary {
    background: transparent;
    color: black;
    border: 1px solid black;
  }

  .doctors .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .doctor-card {
    text-align: center;
  }

  .doctor-card img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }

  .doctor-card h4 {
    margin-bottom: 0.25rem;
  }

  .doctor-card p {
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
  }

  .doctor-card strong {
    font-size: 0.85rem;
    color: #444;
  }
</style>
