<style>
  /* WHY CHOOSE STYLES */
  .why-choose {
    padding: 4rem 2rem;
    background: #f9f9f9;
  }

  .why-choose .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .why-choose .text-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 2rem auto;
  }

  .why-choose .features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items: center;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .feature-col {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .bold-title {
    font-weight: 700;
    font-size: 3.5rem;
    padding: 2rem;
  }

  .image-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-center img {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    object-fit: cover;
  }

  .feature h4 {
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .feature p {
    font-size: 1.2rem;
    color: #333;
    max-width: 150px;
    margin: 0 auto;
    padding: 1rem;
  }

  .buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .button {
    background-color: transparent;
    color: black;
    padding: 1rem 2rem;
    border: 1px solid black;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1.3rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .button:hover {
    background-color: black;
    color: white;
  }

  .button.primary {
    background-color: black;
    color: white;
    border: 1px solid black;
    font-weight: 600;
  }

  .button.primary:hover {
    background-color: #333;
  }

  .button.secondary:hover {
    background-color: black;
    color: white;
  }

  /* DOCTORS SECTION STYLES */

  .doctors .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .doctor-card {
    text-align: center;
    padding: 1rem 0;
  }

  .doctor-card img {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  .doctor-card h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: #222;
  }

  .doctor-card p {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 0.3rem;
  }

  .doctor-card strong {
    display: block;
    font-size: 0.9rem;
    color: #111;
    font-weight: 500;
    margin-top: 0.25rem;
  }

  .extra-doctor {
    display: block;
  }

  .extra-doctor.hidden {
    display: none !important;
  }

  .view-more-btn {
  display: block;
  margin: 2rem auto;
  padding: 10px 24px;
  font-size: 16px;
  border: 1px solid #000;
  background: white;
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.view-more-btn:hover {
  background: #f5f5f5;
}


  .doctor-header {
  text-align: center;
  padding-top: 3rem;
  max-width: 700px;
  margin: 0 auto;
}

.doctor-header h2 {
  font-size: 2.8rem;
  font-weight: 700;
  color: #111;
  margin-bottom: 0.5rem;
}

.doctor-header p {
  font-size: 1.2rem;
  color: #555;
  font-weight: 400;
  line-height: 1.6;
}



  @media (max-width: 1024px) {
    .why-choose .features {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 3rem;
      text-align: center;
      padding: 2rem;
    }

    .why-choose .feature-col {
