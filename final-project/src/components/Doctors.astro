    }

    .why-choose .image-center {
      display: none !important;
    }

    .why-choose .buttons {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      margin-top: 2rem;
    }

    .why-choose .button {
      width: 100%;
      max-width: 150px;
      padding: 0.8rem 1.2rem;
      font-size: 1.1rem;
    }

    .doctors .grid {
      grid-template-columns: 1fr;
    }

    .view-more-btn {
      display: block;
    }
  }

  @media (min-width: 1025px) {
    .doctors .grid {
      grid-template-columns: repeat(3, 1fr);
    }

  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const extraDoctors = document.querySelectorAll('.extra-doctor');
    const viewMoreBtn = document.querySelector('.view-more-btn');
    let expanded = false;

    function isMobile() {
      return window.innerWidth <= 1024;
    }

    function toggleDoctors(show) {
      extraDoctors.forEach(card => {
        card.classList.toggle('hidden', !show);
      });
      viewMoreBtn.textContent = show ? 'Show less' : 'View more';
    }

    function initDoctorsDisplay() {
      if (isMobile()) {
        toggleDoctors(false); 
        expanded = false;
      } else {
        extraDoctors.forEach(card => card.classList.remove('hidden')); 
        viewMoreBtn.textContent = 'View more'; 
        expanded = false;
      }
    }

    initDoctorsDisplay();

    viewMoreBtn.addEventListener('click', () => {
      if (!isMobile()) return;
      expanded = !expanded;
      toggleDoctors(expanded);
    });

    window.addEventListener('resize', () => {
      initDoctorsDisplay();
    });
  });
</script>

