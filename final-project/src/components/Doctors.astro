---
// src/components/Doctors.astro
import doc1 from '../assets/img/doctors/doc1.png';
import doc2 from '../assets/img/doctors/doc2.png';
import doc3 from '../assets/img/doctors/doc3.png';
import doc4 from '../assets/img/doctors/doc4.png';
import doc5 from '../assets/img/doctors/doc5.png';
import doc6 from '../assets/img/doctors/doc6.png';

const doctors = [
  {
    image: doc1,
    name: 'Dr. Mazen E. Ganim',
    credentials: 'MBBS, MS, DM Urology',
    specialty: 'Family Medicine'
  },
  {
    image: doc2,
    name: 'Dr. Mazen E. Ganim',
    credentials: 'MBBS, MD, DM Rheumatology',
    specialty: 'Pathology'
  },
  {
    image: doc3,
    name: 'Dr. Howard D. Axe',
    credentials: 'MBBS, MD Anesthesia',
    specialty: 'Obstetrics'
  },
  {
    image: doc4,
    name: 'Dr. Mahsa Rezaei, MD',
    credentials: 'MBBS, MD, DM Cardiology',
    specialty: 'Emergency Medicine'
  },
  {
    image: doc5,
    name: 'Dr. Dilip Anmangandla, MD',
    credentials: 'MBBS, MS Gyne & Obs',
    specialty: 'Urology'
  },
  {
    image: doc6,
    name: 'Dr. Marion Carson, MD',
    credentials: 'MBBS, MS, Mch Neurosurgery',
    specialty: 'Neurology'
  }
];
---

<section class="doctors">
  <div class="container">
    <div class="title">
      <small>Doctors</small>
      <h2>Doctors</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>

    <div class="grid">
      {doctors.map(doc => (
        <div class="card">
          <img src={doc.image} alt={doc.name} />
          <h3>{doc.name}</h3>
          <p class="credentials">{doc.credentials}</p>
          <p class="specialty">{doc.specialty}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .doctors {
    padding: 4rem 2rem;
    background: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .title small {
    text-transform: uppercase;
    color: #777;
    font-size: 0.85rem;
    letter-spacing: 1px;
  }

  .title h2 {
    font-size: 2.5rem;
    margin: 0.5rem 0;
  }

  .title p {
    margin-bottom: 2rem;
    color: #555;
  }

  .grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .card {
    background: #fff;
    padding: 1rem;
    border-radius: 12px;
    text-align: center;
  }

  .card img {
    width: 140px;
    height: 140px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .card h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0.5rem 0;
  }

  .card .credentials {
    font-size: 0.9rem;
    color: #444;
  }

  .card .specialty {
    font-size: 0.85rem;
    color: #888;
    font-weight: 500;
    text-transform: uppercase;
    margin-top: 0.25rem;
  }
</style>
